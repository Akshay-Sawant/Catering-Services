<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.ngoOptionFragment">

    <ScrollView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".ngooption">
            <TextView
                android:id="@+id/textView_donateFood"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_20"
                android:text="@string/donate_food"
                android:textAlignment="center"
                android:textSize="@dimen/dp_30"
                android:textColor="#DD1E1E"
                android:textStyle="bold|italic" />
            <TextView
                android:id="@+id/textView_DonateDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
               android:layout_marginTop="@dimen/dp_20"
                android:textSize="@dimen/dp_15"
                android:layout_marginStart="@dimen/dp_10"
                android:layout_marginEnd="@dimen/dp_10"
                android:text="@string/donte_description"
                android:textStyle="bold"
                android:textColor="#FF56086B" />
            <ImageView
                android:id="@+id/RotiImage"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_250"
                android:layout_marginTop="@dimen/dp_20"
                app:srcCompat="@drawable/rotingo1"
                android:contentDescription="TODO" />
            <EditText
                android:id="@+id/SelectChoice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
              android:layout_marginStart="@dimen/dim_70dp"
                android:layout_marginTop="@dimen/dp_20"
                android:ems="10"
                android:hint="Yes / No"
                android:inputType="textPersonName" />

            <Button
                android:id="@+id/GoToNext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dim_100dp"
                android:layout_marginTop="@dimen/dp_20"
                android:background="@color/dot_light_screen2"
                android:text="@string/click_here" />
        </LinearLayout>
    </ScrollView>
</FrameLayout>