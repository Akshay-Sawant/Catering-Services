<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".activities.NGOOptions">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:context=".ngooption">

        <TextView
            android:id="@+id/textView_donateFood"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_20"
            android:text="@string/donate_food"
            android:textAlignment="center"
            android:textColor="#DD1E1E"
            android:textSize="@dimen/dp_30"
            android:textStyle="bold|italic" />

        <TextView
            android:id="@+id/textView_DonateDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginEnd="@dimen/dp_10"
            android:text="@string/donte_description"
            android:textColor="#FF56086B"
            android:textSize="@dimen/dp_15"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/RotiImage"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_250"
            android:layout_marginTop="@dimen/dp_20"
            android:contentDescription="TODO"
            app:srcCompat="@drawable/rotingo1" />

        <EditText
            android:id="@+id/SelectChoice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="70dp"
            android:layout_marginTop="@dimen/dp_20"
            android:ems="10"
            android:hint="Yes / No"
            android:inputType="textPersonName" />

        <Button
            android:id="@+id/GoToNext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginEnd="@dimen/dp_10"
            android:background="@color/blue"
            android:text="@string/click_here"
            android:textColor="@color/white"
            android:textStyle="bold" />
    </LinearLayout>
</ScrollView>
