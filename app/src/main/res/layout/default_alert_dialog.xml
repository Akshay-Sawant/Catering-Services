<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/dp_10">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/ngo_image_view"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_300"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/ngo_info_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ngo_image_view"
            android:layout_margin="@dimen/dp_10"
            android:textColor="@color/blue" />

        <LinearLayout
            android:id="@+id/ngo_btn_container_linear_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ngo_info_text_view"
            android:weightSum="1">

            <Button
                android:id="@+id/no_to_donate_food_to_ngo_btn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:background="@color/blue"
                android:text="@string/no_button_of_alert"
                android:textColor="@color/white"
                android:textStyle="bold" />

            <Button
                android:id="@+id/yes_to_donate_food_to_ngo_btn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:background="@color/blue"
                android:text="@string/yes_button_of_alert"
                android:textColor="@color/white"
                android:textStyle="bold" />

        </LinearLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>